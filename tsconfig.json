{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist"
  },

  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],

  "typedocOptions": {
    "entryPoints": "src",
    "out": "doc/documentation",
    "excludePrivate": true
  }
}
