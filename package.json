{
  "name": "tpicarfleet_backend",
  "version": "1.0.0",
  "description": "Car fleet management back-end",
  "main": "program.js",
  "repository": "git@github.com:/NicolasGlassey/TPICarfleet_Backend.git",
  "author": "yannick.baudraz@cpnv.ch",
  "private": "true",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "clean:build": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "npm run clean:build && tsc",
    "start": "npm run build && node dist/program.js",
    "start:dev": "ts-node-dev src/Program.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate": "npm-run-all validate:*",
    "validate:lint": "eslint . --ext .ts",
    "validate:prettier": "prettier ./**/*.ts --config .prettierrc --check",
    "format": "npm-run-all format:*",
    "format:lint": "eslint . --ext .ts --fix",
    "format:prettier": "prettier ./**/*.ts --config .prettierrc --write",
    "generate:doc": "compodoc --config compodocrc.json"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "jsonfile": "^6.1.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/express": "^4.17.11",
    "@types/jsonfile": "^6.0.0",
    "@types/node": "^14.14.26",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  }
}
