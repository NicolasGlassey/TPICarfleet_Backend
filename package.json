{
  "name": "tpicarfleet_backend",
  "version": "0.4.0",
  "description": "Car fleet management back-end",
  "main": "program.js",
  "repository": "git@github.com:/NicolasGlassey/TPICarfleet_Backend.git",
  "author": "yannick.baudraz@cpnv.ch",
  "private": "true",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "clean:build": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "build": "npm-run-all clean:build && tsc && npm run copy-files",
    "copy-files": "chmod +x ./copy-files.sh && ./copy-files.sh",
    "start": "export NODE_ENV=production  && node dist/src/program.js",
    "start:integration": "export NODE_ENV=integration && node dist/src/program.js",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev src/program.ts -r",
    "test": "cross-env NODE_ENV=test jest -c jest.config.js --runInBand",
    "validate": "npm-run-all validate:* test",
    "validate:lint": "eslint . --ext .ts",
    "validate:prettier": "prettier ./**/*.ts --config .prettierrc --check",
    "format": "npm-run-all format:*",
    "format:lint": "eslint . --ext .ts --fix",
    "format:prettier": "prettier ./**/*.ts --config .prettierrc --write",
    "generate:doc": "rimraf documentation && compodoc --config config/compodocrc.json",
    "generate:doc:serve": "rimraf /documentation && compodoc --config config/compodocrc.json --serve --open --port 51001"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@jest-decorated/core": "^0.0.20",
    "@testdeck/jest": "^0.1.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.26",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4",
    "jest": "^26.6.3",
    "mariadb": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.1",
    "typeorm-model-generator": "^0.4.4",
    "typescript": "^4.1.5",
    "yarn-audit-fix": "^5.0.1"
  }
}
